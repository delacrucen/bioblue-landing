---
interface Props {
  text: string;
}
const { text } = Astro.props;
---

<nav class="h-[5vh]">
  <div class="flex items-center justify-center">
    <div class="content relative">
      <h2
        class="text-6xl md:text-8xl font-roboto font-bold inline-block tracking-tight"
        aria-label="bioblue"
      >
        {text}
      </h2>
      <h2
        class="text-6xl md:text-8xl font-roboto font-bold inline-block tracking-tight"
        aria-label="bioblue"
      >
        {text}
      </h2>
    </div>
  </div>
</nav>

<style>
  .content {
    position: relative;
  }
  .content h2 {
    color: transparent;
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-50%);
  }

  .content h2:nth-child(1) {
    -webkit-text-stroke: 2px #0ea5e9;
  }

  .content h2:nth-child(2) {
    color: #0ea5e9;
    animation: animate 4s ease-in-out infinite;
  }

  /* Fallback for browsers that don't support -webkit-text-stroke */
  @supports not (-webkit-text-stroke: 1px transparent) {
    .content h2:nth-child(1) {
      text-shadow:
        -2px 0 #0ea5e9,
        0 2px #0ea5e9,
        2px 0 #0ea5e9,
        0 -2px #0ea5e9;
    }
  }

  @keyframes animate {
    0%,
    100% {
      clip-path: polygon(
        0% 45%,
        16% 44%,
        33% 50%,
        54% 60%,
        70% 61%,
        84% 59%,
        100% 52%,
        100% 100%,
        0% 100%
      );
    }

    50% {
      clip-path: polygon(
        0% 60%,
        15% 65%,
        34% 66%,
        51% 62%,
        67% 50%,
        84% 45%,
        100% 46%,
        100% 100%,
        0% 100%
      );
    }
  }
</style>

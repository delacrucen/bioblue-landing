---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <div
    class="absolute top-0 z-[-2] h-screen w-screen bg-teal-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(255,255,255,.1),rgba(255,255,255,0))]"
  >
    <div class="bg-red-100 flex items-center justify-center">
      <div class="content relative">
        <h2
          class="text-7xl font-hind font-bold inline-block"
          aria-label="bioblue"
        >
          BioBlue
        </h2>
        <h2
          class="text-7xl font-hind font-bold inline-block"
          aria-label="bioblue"
        >
          BioBlue
        </h2>
      </div>
    </div>
  </div>
</Layout>

<style>
  .content h2 {
  }

  .content h2:nth-child(1) {
    color: transparent;
    -webkit-text-stroke: 2px #5eead4;
  }

  .content h2:nth-child(2) {
    color: #5eead4;
    animation: animate 4s ease-in-out infinite;
    position: absolute;
    transform: translate(-100%);
  }

  @keyframes animate {
    0%,
    100% {
      clip-path: polygon(
        0% 45%,
        16% 44%,
        33% 50%,
        54% 60%,
        70% 61%,
        84% 59%,
        100% 52%,
        100% 100%,
        0% 100%
      );
    }

    50% {
      clip-path: polygon(
        0% 60%,
        15% 65%,
        34% 66%,
        51% 62%,
        67% 50%,
        84% 45%,
        100% 46%,
        100% 100%,
        0% 100%
      );
    }
  }
</style>
